<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/WEB-INF/tagdirs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <!--Home-->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>Servlets.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>

    <!--Account-->
    <servlet>
        <servlet-name>Compte</servlet-name>
        <servlet-class>Servlets.Compte</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Compte</servlet-name>
        <url-pattern>/Account</url-pattern>
    </servlet-mapping>

    <!--Login-->
    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>Servlets.Connexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <!--Signin-->
    <servlet>
        <servlet-name>Inscription</servlet-name>
        <servlet-class>Servlets.Inscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inscription</servlet-name>
        <url-pattern>/Signin</url-pattern>
    </servlet-mapping>

    <!--Logout-->
    <servlet>
        <servlet-name>Deconnexion</servlet-name>
        <servlet-class>Servlets.Deconnexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Deconnexion</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <!--Cart-->
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>Servlets.Cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>

    <!--Products-->
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>Servlets.Products</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/Laptops</url-pattern>
        <url-pattern>/Smartphones</url-pattern>
        <url-pattern>/Cameras</url-pattern>
        <url-pattern>/Accessories</url-pattern>
    </servlet-mapping>
</web-app>

